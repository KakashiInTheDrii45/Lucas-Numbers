#include <bits/stdc++.h>
using namespace std;

int Lucas(int n , int* arr)
    {
    int i{0};
    int k{0};
    int lucas{};
    ///
    while((i) < n+1)
    {
        if(k == 0)
            *(arr + k)  = 1; // initialise sequence --
        else if(n == i)
           {
              
            lucas = *(arr + k - 1); // saves the lucas
            break;
           }
        else if(k == 1)
        {
             *(arr + k) =  *(arr + k - 1 ) + i + 1; 
             //  creates the second the pointer
        }
        else
        {
             *(arr + k) =  *(arr + k - 1) + *(arr + k - 2) ;
        }
        i++;
        k++;
    }
    return lucas;
    }
